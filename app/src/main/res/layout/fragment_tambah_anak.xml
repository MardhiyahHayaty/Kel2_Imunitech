<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TambahAnakFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ikon_back_form_anak"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/ikon_back"/>

        <TextView
            android:id="@+id/judulFormAnakFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="34dp"
            android:text="Form Data Si Kecil"
            android:textSize="20sp"
            android:textColor="#854D4C"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:text="Daftarkan data diri Si Kecil agar imunisasi dapat terpenuhi secara tepat."
        android:textColor="#854D4C"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:text="Nama Anak"
        android:textColor="#854D4C"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtNamaAnak"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:color="#854D4C"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:text="Jenis Kelamin"
        android:textColor="#854D4C"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtJenisKelaminAnak"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:color="#854D4C"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:text="Tanggal Lahir"
        android:textColor="#854D4C"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtTanggalLahirAnak"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:color="#854D4C"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:text="Alamat Anak"
        android:textColor="#854D4C"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtAlamatAnak"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:color="#854D4C"/>

    <Button
        android:id="@+id/btnTambahAnak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:background="#E9BBAB"
        android:text="Simpan"
        android:textColor="#854D4C"
        android:textSize="16sp"/>


</LinearLayout>