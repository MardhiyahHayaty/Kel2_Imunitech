<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListAnakActivity">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ikon_back"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/ikon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/judulListAnakFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="34dp"
        android:text="Daftar Si Kecil"
        android:textSize="20sp"
        android:textColor="#854D4C"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ikon_back"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_anak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judulListAnakFragment"
        app:layout_constraintHorizontal_bias="0.5"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="68dp"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="#E9BBAB"
        android:tint="#854D4C"
        android:src="@drawable/ikon_tambah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>