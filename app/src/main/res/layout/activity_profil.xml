<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksandbold"
        android:text="Profil"
        android:layout_marginTop="68dp"
        android:layout_marginStart="34dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/tulisan"/>

    <androidx.cardview.widget.CardView
        android:layout_width="347dp"
        android:layout_height="104dp"
        android:layout_marginTop="152dp"
        android:layout_marginLeft="-95dp"
        android:outlineSpotShadowColor="@color/tulisan"
        android:backgroundTint="@color/background"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:scaleType="centerInside">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/iconPengguna"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/icon_user"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/namaPengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Putri Lestari"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/tulisan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="putrilestari@gmail.com"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="@color/tulisan"
                    android:layout_marginLeft="14dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nama Pengguna -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Diri Pengguna"
        android:fontFamily="@font/quicksandbold"
        android:textSize="18sp"
        android:textColor="@color/tulisan"
        android:layout_marginLeft="-347dp"
        android:layout_marginTop="260dp"/>

    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-170dp"
        android:layout_marginTop="316dp"
        android:background="#F4DDD5" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="310dp"
        android:textColor="@color/tulisan"
        android:fontFamily="@font/quicksandregular"/>
    <TextView
        android:id="@+id/namaPengguna2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Putri Lestari"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="310dp"
        android:textColor="@color/tulisan"
        android:fontFamily="@font/quicksandmedium"/>


    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-352dp"
        android:layout_marginTop="364dp"
        android:background="#F4DDD5" />

