        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="393dp"
        android:fontFamily="@font/quicksandregular"
        android:text="No. Hp"
        android:textColor="@color/tulisan" />

