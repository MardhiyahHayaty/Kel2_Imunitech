        android:textColor="@color/tulisan"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="14sp"/>

    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="489dp"
        android:background="#F4DDD5" />

    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="532dp"
        android:background="#F4DDD5" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-348dp"
        android:layout_marginTop="477dp"
