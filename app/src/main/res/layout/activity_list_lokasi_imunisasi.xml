<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListLokasiImunisasiActivity">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ikon_back2"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/ikon_back" />

    <TextView
        android:id="@+id/judulListLokasiImunisasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="34dp"
        android:text="Lokasi Imunisasi"
        android:textSize="20sp"
        android:textColor="#854D4C"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/ikon_back2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_lokasi_imunisasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@+id/judulListLokasiImunisasi"/>

    <Button
        android:id="@+id/btnTutupLokasi"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:layout_marginTop="648dp"
        android:background="@drawable/buttonbg"
        android:text="Tutup"
        android:layout_marginLeft="40dp"
        android:textColor="@color/tulisan"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>