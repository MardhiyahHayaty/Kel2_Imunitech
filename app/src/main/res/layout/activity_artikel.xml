<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="343dp"
        android:layout_height="106dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:outlineSpotShadowColor="@color/tulisan"
        android:backgroundTint="@color/white"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:outlineAmbientShadowColor="@color/button"
        android:scaleType="centerInside">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/artikel"/>

            <LinearLayout
                android:id="@+id/gambarArtikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/judulArtikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Jalin Kedekatan Sejak Dini"
                    android:textSize="14sp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/tulisan"/>

                <TextView
                    android:id="@+id/cuplikanArtikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s standard ..."
                    android:textSize="10sp"
                    android:textColor="@color/tulisan"
                    android:fontFamily="@font/quicksandregular"
                    android:layout_gravity="center_vertical|end"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>