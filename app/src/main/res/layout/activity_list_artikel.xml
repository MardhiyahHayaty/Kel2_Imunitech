<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ListArtikelActivity"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:text="Artikel"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="34dp"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/tulisan"/>
        <TextView
            android:layout_width="343dp"
            android:layout_height="62dp"
            android:text="Laporkan gejala atau efek samping yang terjadi pada Si Kecil setelah imunisasi untuk mendapatkan penanganan lebih lanjut"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="34dp"
            android:textColor="@color/tulisan"
            android:fontFamily="@font/quicksandregular"
            android:layout_gravity="center_vertical|end"/>
    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_lokasi_imunisasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="234dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kotaknavbar"
        android:layout_marginTop="760dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="103dp">
        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginTop="668dp"
            android:layout_marginLeft="31dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_home"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btn_lapor"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginTop="667dp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_lapor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_artikel"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginTop="668dp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_artikel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_tentang"
            android:layout_width="46dp"
            android:layout_height="48dp"
            android:layout_marginTop="667dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_tentang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.723"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_profil"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginTop="667dp"
            android:layout_marginLeft="43dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_profil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.723"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>