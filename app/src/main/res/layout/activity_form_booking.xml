<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FormBookingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:text="Form Daftar Imunisasi"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="104dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/tulisan"/>
        <TextView
            android:layout_width="241dp"
            android:layout_height="40dp"
            android:fontFamily="@font/quicksandregular"
            android:text="Jangan lewatkan imunisasi bertahap untuk melindungi Si Kecil!"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="104dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/tulisan"
            android:layout_gravity="center_vertical|end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="34dp"
            android:paddingRight="34dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/quicksandmedium"
                android:text="Pilih Data Anak"
                android:textColor="@color/tulisan"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <AutoCompleteTextView
                    android:id="@+id/ddlPilihDataAnak"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/quicksandmedium"
                android:text="Jenis Imunisasi Terakhir"
                android:textColor="@color/tulisan"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/imunisasiTerakhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/quicksandmedium"
                android:text="Pilih Jenis Imunisasi"
                android:textColor="@color/tulisan"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <AutoCompleteTextView
                    android:id="@+id/ddlPilihJenisImunisasi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/quicksandmedium"
                android:text="Pilih Tanggal dan Waktu"
                android:textColor="@color/tulisan"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/waktuImunisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/daftarImunisasi"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/buttonbg"
                android:fontFamily="@font/quicksandbold"
                android:text="Daftar"
                android:textColor="@color/tulisan" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_kembali"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="34dp"
            android:src="@drawable/ikon_back" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>